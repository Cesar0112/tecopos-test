{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps",
  "projects": {
    "sso": {
      "type": "application",
      "root": "apps/sso",
      "entryFile": "main",
      "sourceRoot": "apps/sso/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sso/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "bank": {
      "type": "application",
      "root": "apps/bank",
      "entryFile": "main",
      "sourceRoot": "apps/bank/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bank/tsconfig.app.json"
      }
    }
  }
}